---
const year = new Date().getFullYear();
import logo from '../images/logo.png';
---

<script src="https://code.iconify.design/iconify-icon/1.0.2/iconify-icon.min.js"
></script>
<footer class="footer">
  <div class="container">
    <img
      class="logo"
      src={logo}
      alt="Logo"
    />
    <section>
      <ul class="links main-links">
        <li><a href="/">Home</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/blog">Blog</a></li>
      </ul>
    </section>
    <div class="bottom">
      <section>
        <h3>TM-LBenson</h3>
        <p>Copyright {year} Lewis Benson.</p>
      </section>
      <section>
        <h3>Social</h3>
        <ul class="links">
          <li>
            <a href="https://www.linkedin.com/in/tm-lewis-benson/"
              ><iconify-icon
                icon="mdi:linkedin"
                style="color: black;"
                width="25"
                height="25"
              ></iconify-icon>LinkedIn</a
            >
          </li>
          <li>
            <a href="https://github.com/tm-LBenson"
              ><iconify-icon
                icon="mdi:github"
                style="color: black;"
                width="25"
                height="25"
              ></iconify-icon>GitHub</a
            >
          </li>
          <li>
            <a href="https://twitter.com/TM_LBenson"
              ><iconify-icon
                icon="icon-park-solid:twitter"
                style="color: black;"
                width="25"
                height="25"
              ></iconify-icon>Twitter</a
            >
          </li>
        </ul>
      </section>
    </div>

    <div class="back-to-top"></div>
  </div>
</footer>
<script>
  document.querySelector('.back-to-top').addEventListener('click', () => {
    document.body.scrollIntoView({ behavior: 'smooth', block: 'start' });
  });
  let lastKnownScrollY = 0;
  let currentScrollY = 0;
  const backToTop = document.querySelector('.back-to-top');

  window.addEventListener('scroll', () => {
    lastKnownScrollY = currentScrollY;
    currentScrollY = window.scrollY;
    if (currentScrollY > lastKnownScrollY && currentScrollY > 100) {
      backToTop.classList.add('visible');
    } else if (currentScrollY === 0) {
      backToTop.classList.remove('visible');
    }
  });
</script>
<style>
  .back-to-top {
    cursor: pointer;
    content: url('https://api.iconify.design/material-symbols/arrow-upward.svg?color=white&width=25&height=25');
    position: fixed;
    bottom: 30px;
    right: 30px;
    border-radius: 10000px;
    background: linear-gradient(red, #9f0101);
    height: 50px;
    width: 50px;
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
  }

  .back-to-top.visible {
    opacity: 1;
  }

  .footer {
    background: var(--color-third);
    color: #fff;
    text-align: center;
    padding: 10rem;
    margin-top: 60px;
  }
  .logo {
    width: 50px;
    height: 50px;
    margin-bottom: 3rem;
  }

  .main-links {
    font-size: 1.6rem;
    display: flex;
    justify-content: center;
    padding: 5rem;
    width: 80vw;
    border-top: 3px rgba(50, 37, 37, 0.234) solid;
    border-bottom: 3px rgba(50, 37, 37, 0.234) solid;
  }

  .footer .container {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
  }
  .bottom {
    width: 100%;
    display: flex;
    justify-content: space-between;
  }
  .bottom section {
    margin-top: 5rem;
    width: 50%;
    text-align: center;
  }

  .bottom ul {
    display: flex;
    justify-content: center;
  }
  .links {
    display: flex;
    gap: 2rem;
  }

  .footer a {
    color: var(--color-secondary-text);
  }

  .footer a:hover {
    text-decoration: underline;
  }

  .footer h3 {
    margin-bottom: 10px;
  }

  .footer div:nth-child(1) {
    text-align: left;
  }

  @media (max-width: 1200px) {
    .footer .container {
      text-align: left;
      display: flex;
      align-items: flex-start;
      flex-direction: column;
      justify-content: flex-start;
      gap: 6rem;
    }
    .footer section {
      display: flex;
      width: 100%;
      gap: 6rem;
      justify-content: flex-start;
      margin-left: -100px;
    }
    .footer section p {
      min-width: 230px;
    }
  }
</style>
